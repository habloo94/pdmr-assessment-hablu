<%- include('../partials/header',{page:page}); %>

<div class="container mt-4">
    <div class="d-flex  justify-content-between">
<h2 class="text-center">Car List</h2><button type="button" class="btn btn-primary" data-bs-toggle="modal"
    data-bs-target="#exampleModal">
    Add
</button>
    </div>
    <!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
      <form action="/cars" method="post">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add New Car</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
            <div class="d-flex flex-column  align-items-center">
                <div class="mb-2">
                    <label for="model" class="form-label">Model</label>
                    <input type="text" class="form-control" name="model" id="model"
                        placeholder="Model">
                </div>
                <div class="mb-2">
                    <label for="year" class="form-label">Year</label>
                    <input type="month" class="form-control" name="year" id="year" placeholder="Year">
                </div>
                <div class="mb-2">
                    <label for="colour" class="form-label">Colour</label>
                    <input type="text" class="form-control" name="colour" id="colour" placeholder="colour">
                </div>
                <div class="mb-2">
                    <label for="mileage" class="form-label">Year</label>
                    <input type="number" class="form-control" name="mileage" id="mileage" placeholder="mileage">
                </div>
            </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Add</button>
      </div>
    </div>
    </form>
  </div>
</div>
<div class="d-flex mt-3">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Model</th>
                <th>Year</th>
                <th>Colour</th>
                <th>Mileage</th>
                <!-- <th>Created</th> -->
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% for(var i=0; i < data.length; i++) { %>
            <tr>
                <td><%= i+1 %></td>
                <td><%= data[i].model %></td>
                <td><%= data[i].year %></td>
                <td><%= data[i].colour %></td>
                <td><%= data[i].mileage %> kms</td>
                <!-- <td><%= data[i].created %></td> -->
                <td>
                    <a class="btn btn-sm btn-info">edit</a>
                    <a class="btn btn-sm btn-danger">delete</a>
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>
</div>
    </div>
    <%- include('../partials/footer'); %>
